<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Certification Tree View -->
    <record id="view_ensa_certification_tree" model="ir.ui.view">
        <field name="name">ensa.employee.certification.tree</field>
        <field name="model">ensa.employee.certification</field>
        <field name="arch" type="xml">
            <tree string="Certifications">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="issuing_body"/>
                <field name="issue_date"/>
            </tree>
        </field>
    </record>

    <!-- Certification Form View -->
    <record id="view_ensa_certification_form" model="ir.ui.view">
        <field name="name">ensa.employee.certification.form</field>
        <field name="model">ensa.employee.certification</field>
        <field name="arch" type="xml">
            <form string="Certification">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Certification Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" required="1"/>
                            <field name="issuing_body"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                        </group>
                    </group>
                    <separator string="Verification"/>
                    <field name="verification_notes" placeholder="Notes regarding verification of this certification..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Certification Search View -->
    <record id="view_ensa_certification_search" model="ir.ui.view">
        <field name="name">ensa.employee.certification.search</field>
        <field name="model">ensa.employee.certification</field>
        <field name="arch" type="xml">
            <search string="Search Certifications">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="issuing_body"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_by_issuing_body" string="Issuing Body" context="{'group_by': 'issuing_body'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Certification Action (MISSING - ADDED) -->
    <record id="action_ensa_certification" model="ir.actions.act_window">
        <field name="name">Certifications</field>
        <field name="res_model">ensa.employee.certification</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No certifications found
            </p>
            <p>
                Track employee certifications, licenses, and qualifications.
            </p>
        </field>
    </record>
</odoo>
