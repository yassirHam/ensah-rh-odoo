<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_ensa_hr" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ensa.hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="ENSA HR - AI" string="ENSA HR" data-key="ensa_hoceima_hr">
                    
                    <!-- OpenAI Configuration -->
                    <h2>AI Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_ai_features"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_ai_features"/>
                                <div class="text-muted">
                                    Enable AI-powered insights, predictions, and natural language queries
                                </div>
                                <div class="content-group" invisible="not enable_ai_features">
                                <div class="mt16">
                                    <label for="ai_provider" class="o_light_label"/>
                                    <field name="ai_provider"/>
                                </div>
                                
                                <!-- Hugging Face Settings -->
                                <div invisible="ai_provider != 'huggingface'">
                                    <div class="mt16">
                                        <label for="huggingface_api_key" class="o_light_label"/>
                                        <field name="huggingface_api_key" password="True" placeholder="hf_..."/>
                                    </div>
                                    <div class="mt16">
                                        <label for="huggingface_model" class="o_light_label"/>
                                        <field name="huggingface_model"/>
                                    </div>
                                </div>

                                <!-- Bytez Settings -->
                                <div invisible="ai_provider != 'bytez'">
                                    <div class="mt16">
                                        <label for="bytez_api_key" class="o_light_label"/>
                                        <field name="bytez_api_key" password="True" placeholder="..."/>
                                    </div>
                                    <div class="mt16">
                                        <label for="bytez_model" class="o_light_label"/>
                                        <field name="bytez_model"/>
                                    </div>
                                </div>

                                <div class="mt16">
                                    <button name="action_test_ai_connection" 
                                            string="Test Connection" 
                                            type="object" 
                                            class="btn-link"
                                            icon="fa-plug"/>
                                </div>
                            </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_turnover_prediction"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_turnover_prediction"/>
                                <div class="text-muted">
                                    Use AI to predict employee turnover risk
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- API Usage Statistics -->
                    <h2>API Usage Statistics</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="api_calls_this_month" string="API Calls This Month"/>
                                <field name="api_calls_this_month" readonly="1"/>
                                <div class="text-muted mt8">
                                    Total AI API calls made this month
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="estimated_cost" string="Estimated Cost"/>
                                <field name="estimated_cost" readonly="1"/>
                                <div class="text-muted mt8">
                                    Approximate API costs in USD this month
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
