<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_ensa_hr" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ensa.hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="ENSA HR - AI &amp; WhatsApp" string="ENSA HR" data-key="ensa_hoceima_hr">
                    
                    <!-- OpenAI Configuration -->
                    <h2>ðŸ¤– AI Configuration (OpenAI)</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_ai_features"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_ai_features"/>
                                <div class="text-muted">
                                    Enable AI-powered insights, predictions, and natural language queries
                                </div>
                                <div class="content-group" invisible="not enable_ai_features">
                                <div class="mt16">
                                    <label for="ai_provider" class="o_light_label"/>
                                    <field name="ai_provider"/>
                                </div>
                                
                                <!-- OpenAI Settings -->
                                <div invisible="ai_provider != 'openai'">
                                    <div class="mt16">
                                        <label for="openai_api_key" class="o_light_label"/>
                                        <field name="openai_api_key" password="True" placeholder="sk-..."/>
                                    </div>
                                    <div class="mt16">
                                        <label for="openai_model" class="o_light_label"/>
                                        <field name="openai_model"/>
                                    </div>
                                </div>

                                <!-- Gemini Settings -->
                                <div invisible="ai_provider != 'gemini'">
                                    <div class="mt16">
                                        <label for="gemini_api_key" class="o_light_label"/>
                                        <field name="gemini_api_key" password="True" placeholder="AIza..."/>
                                    </div>
                                    <div class="mt16">
                                        <label for="gemini_model" class="o_light_label"/>
                                        <field name="gemini_model"/>
                                    </div>
                                </div>

                                <!-- Hugging Face Settings -->
                                <div invisible="ai_provider != 'huggingface'">
                                    <div class="mt16">
                                        <label for="huggingface_api_key" class="o_light_label"/>
                                        <field name="huggingface_api_key" password="True" placeholder="hf_..."/>
                                    </div>
                                    <div class="mt16">
                                        <label for="huggingface_model" class="o_light_label"/>
                                        <field name="huggingface_model"/>
                                    </div>
                                </div>

                                <div class="mt16">
                                    <button name="action_test_ai_connection" 
                                            string="Test Connection" 
                                            type="object" 
                                            class="btn-link"
                                            icon="fa-plug"/>
                                </div>
                            </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_turnover_prediction"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_turnover_prediction"/>
                                <div class="text-muted">
                                    Use AI to predict employee turnover risk
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- WhatsApp Configuration -->
                    <h2>ðŸ’¬ WhatsApp Bot Configuration (Twilio)</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_whatsapp_bot"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_whatsapp_bot"/>
                                <div class="text-muted">
                                    Enable WhatsApp chatbot for employee self-service
                                </div>
                                <div class="content-group" invisible="not enable_whatsapp_bot">
                                    <div class="mt16">
                                        <label for="twilio_account_sid" class="o_light_label"/>
                                        <field name="twilio_account_sid" placeholder="AC..."/>
                                    </div>
                                    <div class="mt16">
                                        <label for="twilio_auth_token" class="o_light_label"/>
                                        <field name="twilio_auth_token" password="True" placeholder="..."/>
                                    </div>
                                    <div class="mt16">
                                        <label for="twilio_whatsapp_number" class="o_light_label"/>
                                        <field name="twilio_whatsapp_number" placeholder="whatsapp:+14155238886"/>
                                    </div>
                                    <div class="mt16">
                                        <button name="action_test_whatsapp_connection" 
                                                string="Test Connection" 
                                                type="object" 
                                                class="btn-link"
                                                icon="fa-plug"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_internship_tracking"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_internship_tracking"/>
                                <div class="text-muted">
                                    Track internship progress via WhatsApp check-ins
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Matching Engine -->
                    <h2>ðŸŽ¯ Smart Matching Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_smart_matching"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_smart_matching"/>
                                <div class="text-muted">
                                    Use AI to match students with internships and supervisors
                                </div>
                                <div class="content-group mt16" invisible="not enable_smart_matching">
                                    <label for="matching_threshold" class="o_light_label"/>
                                    <field name="matching_threshold"/>
                                    <div class="text-muted">
                                        Only show matches with score above this threshold (0-100)
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_auto_documents"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_auto_documents"/>
                                <div class="text-muted">
                                    Automatically generate PDFs with QR codes for verification
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- API Usage Statistics -->
                    <h2>API Usage Statistics</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="api_calls_this_month" string="API Calls This Month"/>
                                <field name="api_calls_this_month" readonly="1"/>
                                <div class="text-muted mt8">
                                    Total AI API calls made this month
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="estimated_cost" string="Estimated Cost"/>
                                <field name="estimated_cost" readonly="1"/>
                                <div class="text-muted mt8">
                                    Approximate API costs in USD this month
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
