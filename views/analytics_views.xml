<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions for Analytics Dashboard -->
    <record id="action_department_performance_analysis" model="ir.actions.act_window">
        <field name="name">Department Performance</field>
        <field name="res_model">ensa.evaluation</field>
        <field name="view_mode">graph,pivot,tree,form</field>
        <field name="context">{'group_by': ['employee_id', 'date:month']}</field>
    </record>

    <record id="action_training_analysis" model="ir.actions.act_window">
        <field name="name">Training Analysis</field>
        <field name="res_model">ensa.training</field>
        <field name="view_mode">pivot,graph,tree,form</field>
        <field name="context">{'group_by': ['category', 'status']}</field>
    </record>

    <record id="action_equipment_analysis" model="ir.actions.act_window">
        <field name="name">Equipment Analysis</field>
        <field name="res_model">ensa.equipment</field>
        <field name="view_mode">graph,pivot,tree,form</field>
        <field name="context">{'group_by': ['equipment_type', 'state']}</field>
    </record>

    <record id="action_certification_analysis" model="ir.actions.act_window">
        <field name="name">Certification Status</field>
        <field name="res_model">ensa.employee.certification</field>
        <field name="view_mode">graph,pivot,tree,form</field>
        <field name="context">{'group_by': ['issuing_body']}</field>
    </record>

    <record id="action_evaluation_status_analysis" model="ir.actions.act_window">
        <field name="name">Evaluation Overview</field>
        <field name="res_model">ensa.evaluation</field>
        <field name="view_mode">pivot,graph,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'group_by': ['state', 'evaluator_id']}</field>
    </record>
    
    <!-- Analysis Menu Items -->
    <menuitem id="menu_ensa_analytics_root"
              name="Analytics"
              parent="menu_ensa_hr_root"
              sequence="50"/>

    <menuitem id="menu_ensa_analytics_performance"
              name="Performance"
              parent="menu_ensa_analytics_root"
              action="action_department_performance_analysis"
              sequence="10"/>

    <menuitem id="menu_ensa_analytics_training"
              name="Training"
              parent="menu_ensa_analytics_root"
              action="action_training_analysis"
              sequence="20"/>

    <menuitem id="menu_ensa_analytics_equipment"
              name="Equipment"
              parent="menu_ensa_analytics_root"
              action="action_equipment_analysis"
              sequence="30"/>

    <menuitem id="menu_ensa_analytics_certification"
              name="Certifications"
              parent="menu_ensa_analytics_root"
              action="action_certification_analysis"
              sequence="40"/>

    <menuitem id="menu_ensa_analytics_overview"
              name="Evaluation Overview"
              parent="menu_ensa_analytics_root"
              action="action_evaluation_status_analysis"
              sequence="50"/>

</odoo>
