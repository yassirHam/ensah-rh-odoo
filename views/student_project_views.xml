<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ensa_student_project_tree" model="ir.ui.view">
        <field name="name">ensa.student.project.tree</field>
        <field name="model">ensa.student.project</field>
        <field name="arch" type="xml">
            <tree string="Student Projects" decoration-success="status == 'completed'" decoration-warning="status == 'on_hold'" decoration-danger="status == 'cancelled'">
                <field name="name"/>
                <field name="title"/>
                <field name="supervisor_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ensa_student_project_form" model="ir.ui.view">
        <field name="name">ensa.student.project.form</field>
        <field name="model">ensa.student.project</field>
        <field name="arch" type="xml">
            <form string="Student Project">
                <header>
                    <button name="action_start" string="Start Project" type="object" class="oe_highlight" invisible="status != 'planning'"/>
                    <button name="action_complete" string="Complete" type="object" class="oe_highlight" invisible="status != 'in_progress'"/>
                    <button name="action_hold" string="Put on Hold" type="object" invisible="status != 'in_progress'"/>
                    <button name="action_start" string="Resume" type="object" invisible="status != 'on_hold'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="status in ('completed', 'cancelled')"/>
                    <field name="status" widget="statusbar" statusbar_visible="planning,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="title" placeholder="Project Title"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="supervisor_id"/>
                            <field name="domain"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="budget"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Project Description..."/>
                        </page>
                        <page string="Technical Details" name="technical">
                            <group>
                                <field name="technology_stack"/>
                                <field name="deliverables"/>
                                <field name="outcomes"/>
                                <field name="final_grade"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ensa_student_project_kanban" model="ir.ui.view">
        <field name="name">ensa.student.project.kanban</field>
        <field name="model">ensa.student.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="title"/>
                <field name="status"/>
                <field name="supervisor_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="title"/>
                                </strong>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="name"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="supervisor_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ensa_student_project_search" model="ir.ui.view">
        <field name="name">ensa.student.project.search</field>
        <field name="model">ensa.student.project</field>
        <field name="arch" type="xml">
            <search string="Search Student Projects">
                <field name="name"/>
                <field name="title"/>
                <field name="supervisor_id"/>
                <filter string="My Projects" name="my_projects" domain="[('supervisor_id.user_id', '=', uid)]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Supervisor" name="group_by_supervisor" context="{'group_by': 'supervisor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ensa_student_project" model="ir.actions.act_window">
        <field name="name">Student Projects</field>
        <field name="res_model">ensa.student.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_ensa_student_project_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new student project
            </p>
        </field>
    </record>
</odoo>
