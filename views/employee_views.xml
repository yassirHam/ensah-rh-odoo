<odoo>
    <!-- Employee Kanban View -->
    <record id="view_employee_kanban_ensa" model="ir.ui.view">
        <field name="name">hr.employee.kanban.ensa</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_details')]" position="replace">
                <div class="oe_kanban_details">
                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                    <ul class="mt4">
                        <li t-if="record.department_id.raw_value"><field name="department_id"/></li>
                        <li t-if="record.job_title.raw_value"><field name="job_title"/></li>
                        <li t-if="record.skill_level and record.skill_level.raw_value" class="text-muted">
                            <i class="fa fa-star text-warning"/> 
                            <span t-esc="record.skill_level.raw_value.replace('_', ' ').title()"/>
                        </li>
                    </ul>
                </div>
            </xpath>
        </field>
    </record>
    
    <!-- Employee Form View -->
    <record id="view_employee_form_ensa" model="ir.ui.view">
        <field name="name">hr.employee.form.ensa</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_view_trainings" type="object" string="View Trainings" 
                            class="btn-primary" icon="fa-graduation-cap"/>
                    <button name="action_view_equipment" type="object" string="View Equipment" 
                            class="btn-info" icon="fa-laptop"/>
                    <field name="last_evaluation_date" invisible="1"/>
                    <button name="action_view_evaluations" type="object" string="View Evaluations" 
                            class="btn-success" icon="fa-star" />
                </header>
            </xpath>
            
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_projects" type="object" class="oe_stat_button" icon="fa-tasks" invisible="project_count == 0">
                    <field name="project_count" widget="statinfo" string="Projects"/>
                </button>
                <button name="action_view_internships" type="object" class="oe_stat_button" icon="fa-id-badge" invisible="internship_count == 0">
                    <field name="internship_count" widget="statinfo" string="Internships"/>
                </button>
                <button name="action_view_evaluations" type="object" class="oe_stat_button" icon="fa-star">
                    <field name="evaluation_count" widget="statinfo" string="Evaluations"/>
                </button>
            </xpath>
            
            <xpath expr="//page[@name='public']" position="after">
                <page name="ensa_details" string="Profile">
                    <group>
                        <group string="Personal Details">
                            <field name="identification_number" placeholder="National ID"/>
                            <field name="emergency_contact"/>
                            <field name="skill_level"/>
                        </group>
                        <group string="Skills Matrix">
                            <field name="technical_skills" widget="text_area" placeholder="List technical skills and proficiencies"/>
                            <field name="soft_skills" widget="text_area" placeholder="Communication, leadership, etc."/>
                            <field name="language_skills" widget="text_area" placeholder="Languages and proficiency levels"/>
                        </group>
                    </group>

                    
                    <notebook>
                        <page string="Certifications">
                            <field name="certification_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="issuing_body"/>
                                    <field name="issue_date"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name" required="1"/>
                                            <field name="issuing_body"/>
                                            <field name="issue_date"/>
                                        </group>
                                        <group>
                                            <field name="employee_id" invisible="1"/>
                                        </group>
                                    </group>
                                    <separator string="Verification"/>
                                    <field name="verification_notes" widget="text_area" placeholder="Upload certificate scan or verification notes"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </page>
                <page name="performance_trends" string="Performance Trends">
                    <group>
                        <group string="Performance Metrics">
                            <field name="avg_performance_score" widget="gauge" options="{'style': 'width: 200px; height: 120px;'}"/>
                            <field name="performance_trend" widget="badge" readonly="1"/>
                        </group>
                        <group string="Recent Evaluations">
                            <field name="last_3_evaluations" readonly="1"/>
                        </group>
                    </group>
                    <separator string="Performance Analysis"/>
                    <field name="performance_direction_text" widget="html" readonly="1"/>
                </page>
            </xpath>
            

            
            <xpath expr="//field[@name='mobile_phone']" position="after">
                <field name="last_evaluation_date" invisible="1"/>
            </xpath>
        </field>
    </record>
    
    <!-- Employee Analysis View (Simplified Dashboard Style) -->
    <record id="view_employee_analysis_form" model="ir.ui.view">
        <field name="name">hr.employee.analysis.simplified</field>
        <field name="model">hr.employee</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form string="Employee Analysis" create="false" edit="false" delete="false">
                <sheet style="background: #f5f7fa;">
                    <!-- Header -->
                    <div class="oe_title mb32">
                        <h1 style="color: #2c3e50;">
                            <i class="fa fa-users"/> Employee Analysis
                        </h1>
                        <p class="text-muted">Workforce insights and statistics</p>
                    </div>
                    
                    <!-- Quick Stats Cards -->
                    <div class="row mb32">
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Total Employees
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="total-emp">
                                                <field name="id" invisible="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-users fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Departments
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="dept-count">
                                                -
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-sitemap fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Expert Level
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="expert-count">
                                                -
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-star fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Avg Tenure
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="avg-tenure">
                                                - years
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-calendar fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Simple Filters -->
                    <div class="row mb16">
                        <div class="col-12">
                            <div class="alert alert-light" style="background: white; border-radius: 8px; padding: 15px;">
                                <h5 style="margin-bottom: 15px;">
                                    <i class="fa fa-filter"/> Quick Filters
                                </h5>
                                <div class="btn-group btn-group-sm" role="group">
                                    <span class="badge rounded-pill text-bg-primary p-2 m-1">All Employees</span>
                                    <span class="badge rounded-pill text-bg-success p-2 m-1">Expert Level</span>
                                    <span class="badge rounded-pill text-bg-info p-2 m-1">Senior Level</span>
                                    <span class="badge rounded-pill text-bg-warning p-2 m-1">Entry Level</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Main Content Sections -->
                    <div class="row">
                        <!-- Department Breakdown -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 bg-primary text-white">
                                    <h6 class="m-0 font-weight-bold">
                                        <i class="fa fa-building"/> By Department
                                    </h6>
                                </div>
                                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                                    <p class="text-muted">
                                        Department distribution will be loaded here.
                                        Use the tree view below for detailed breakdown.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Skill Level Distribution -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 bg-success text-white">
                                    <h6 class="m-0 font-weight-bold">
                                        <i class="fa fa-star"/> By Skill Level
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="list-group">
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fa fa-star text-warning"/> Expert</span>
                                            <span class="badge badge-primary badge-pill">-</span>
                                        </div>
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fa fa-star-half-o text-info"/> Senior</span>
                                            <span class="badge badge-primary badge-pill">-</span>
                                        </div>
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fa fa-star-o text-secondary"/> Intermediate</span>
                                            <span class="badge badge-primary badge-pill">-</span>
                                        </div>
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fa fa-circle-o text-muted"/> Entry</span>
                                            <span class="badge badge-primary badge-pill">-</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Quick Actions -->
                    <div class="row mt16">
                        <div class="col-12 text-center">
                            <p class="text-muted">
                                <i class="fa fa-info-circle"/> Switch to Tree or Kanban view for detailed employee list
                            </p>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_ensa_employee_analysis" model="ir.actions.act_window">
        <field name="name">Employee Analysis</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="view_employee_analysis_form"/>
        <field name="domain">[('active', '=', True)]</field>
        <field name="context">{'search_default_group_by_department': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No employees found
            </p>
            <p>
                View your workforce statistics and distribution by department and skill level.
            </p>
        </field>
    </record>
</odoo>