<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Dashboard with AI Insights -->
    <record id="view_ensa_dashboard" model="ir.ui.view">
        <field name="name">ensa.dashboard.view</field>
        <field name="model">ensa.dashboard</field>
        <field name="arch" type="xml">
            <form string="HR Dashboard" create="false" edit="false" delete="false">
                <sheet style="background: #f5f7fa;">
                    <!-- Header -->
                    <div class="oe_title mb32">
                        <h1 style="color: #2c3e50;">
                            <i class="fa fa-dashboard"/> HR Dashboard
                        </h1>
                    </div>
                    
                    <!-- AI Insights Banner REMOVED -->
                    
                    <!-- Stats Cards Row -->
                    <div class="row mb32">
                        <!-- Total Employees Card -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Total Employees
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <field name="total_employees" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-users fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Avg Performance Card -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Avg Performance
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <field name="avg_performance" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-star fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Trainings Card -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Active Trainings
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <field name="active_trainings" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-graduation-cap fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Evaluations Card -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Evaluations
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <field name="total_evaluations" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-clipboard fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Turnover Risk & Anomalies Row -->
                    <div class="row mb32">
                        <!-- Internships Ending Soon -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">
                                        <i class="fa fa-clock-o"/> Internships Ending Soon
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <field name="upcoming_internships_html" widget="html" readonly="1" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Skill Distribution -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-success">
                                        <i class="fa fa-bar-chart"/> Skill Level Distribution
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <field name="skill_distribution_html" widget="html" readonly="1" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Predictions & Suggestions Row REMOVED -->
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Dashboard Server Action -->
    <record id="action_ensa_dashboard_server" model="ir.actions.server">
        <field name="name">HR Dashboard</field>
        <field name="model_id" ref="model_ensa_dashboard"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_open_dashboard()
        </field>
    </record>
</odoo>
