<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Dashboard with AI Insights -->
    <record id="view_ensa_dashboard" model="ir.ui.view">
        <field name="name">ensa.dashboard.view</field>
        <field name="model">ensa.dashboard</field>
        <field name="arch" type="xml">
            <form string="HR Dashboard" create="false" edit="false" delete="false">
                <sheet style="background: #f5f7fa;">
                    <!-- Header -->
                    <div class="oe_title mb32">
                        <h1 style="color: #2c3e50;">
                            <i class="fa fa-dashboard"/> HR Analytics Dashboard
                        </h1>
                        <p class="text-muted">Real-time insights powered by AI</p>
                    </div>
                    
                    <!-- AI Insights Banner -->
                    <div class="row mb32">
                        <div class="col-12">
                            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; padding: 30px; color: white; box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h3 style="color: white; margin-bottom: 15px;">
                                            <i class="fa fa-robot fa-2x" style="vertical-align: middle;"/> AI Insights
                                        </h3>
                                        <div id="ai-insights-content" style="font-size: 1.1em; line-height: 1.6;">
                                            <field name="ai_insights_html" widget="html" readonly="1" nolabel="1"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex flex-column align-items-center justify-content-center">
                                        <button name="action_refresh" string="Refresh" type="object" 
                                                class="btn btn-light btn-lg mb-2" icon="fa-refresh"
                                                style="border-radius: 50px; padding: 12px 30px; min-width: 200px;"/>
                                        <button name="%(action_ai_assistant_chat)d" string="Ask AI" type="action" 
                                                class="btn btn-outline-light btn-lg" icon="fa-comments"
                                                style="border-radius: 50px; padding: 12px 30px; min-width: 200px;"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Stats Cards Row -->
                    <div class="row mb32">
                        <!-- Total Employees Card -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Total Employees
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <field name="total_employees" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-users fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Avg Performance Card -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Avg Performance
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <field name="avg_performance" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-star fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Trainings Card -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Active Trainings
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <field name="active_trainings" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-graduation-cap fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Evaluations Card -->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Evaluations
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <field name="total_evaluations" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fa fa-clipboard fa-2x text-gray-300"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Turnover Risk & Anomalies Row -->
                    <div class="row mb32">
                        <!-- Turnover Risks -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-danger">
                                        <i class="fa fa-exclamation-triangle"/> Turnover Risk Alerts
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <field name="turnover_risks_html" widget="html" readonly="1" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Anomalies -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-warning">
                                        <i class="fa fa-bell"/> Detected Anomalies
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <field name="anomalies_html" widget="html" readonly="1" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Predictions & Suggestions Row -->
                    <div class="row">
                        <!-- Future Predictions -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 bg-primary text-white">
                                    <h6 class="m-0 font-weight-bold">
                                        <i class="fa fa-line-chart"/> Future Predictions
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div id="predictions-content">
                                        <button name="action_generate_predictions" string="Generate Predictions" 
                                                type="object" class="btn btn-primary btn-block" icon="fa-magic"/>
                                        <field name="predictions_html" widget="html" readonly="1" nolabel="1" class="mt-3"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- AI Suggestions -->
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header py-3 bg-success text-white">
                                    <h6 class="m-0 font-weight-bold">
                                        <i class="fa fa-lightbulb-o"/> AI Suggestions
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div id="suggestions-content">
                                        <button name="action_get_suggestions" string="Get Suggestions" 
                                                type="object" class="btn btn-success btn-block" icon="fa-bolt"/>
                                        <field name="suggestions_html" widget="html" readonly="1" nolabel="1" class="mt-3"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Dashboard Server Action -->
    <record id="action_ensa_dashboard_server" model="ir.actions.server">
        <field name="name">HR Dashboard</field>
        <field name="model_id" ref="model_ensa_dashboard"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_open_dashboard()
        </field>
    </record>
</odoo>
