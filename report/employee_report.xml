<odoo>
    <record id="action_report_employee_profile" model="ir.actions.report">
        <field name="name">Employee Profile</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ensa_hoceima_hr.report_employee</field>
        <field name="report_file">ensa_hoceima_hr.report_employee</field>
        <field name="print_report_name">'Employee_Profile - %s' % (object.name_get()[0][1])</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Evaluation Report - PDF Export -->
    <record id="action_report_evaluation_pdf" model="ir.actions.report">
